# Server Configuration
PORT=3000
NODE_ENV=development

# Zalo Configuration
# Get these from https://developers.zalo.me/
ZALO_APP_ID=your_zalo_app_id_here
ZALO_APP_SECRET=your_zalo_app_secret_here
ZALO_WEBHOOK_SECRET=your_webhook_verification_token_here

# Google Sheets Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Your Google Spreadsheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# Optional: Logging
LOG_LEVEL=info
